{
  "name": "@indielayer/ui",
  "version": "1.0.9",
  "description": "Indielayer UI Components with Tailwind CSS build for Vue 3",
  "author": {
    "name": "JoÃ£o Teixeira",
    "url": "https://indielayer.com/"
  },
  "keywords": [
    "vue",
    "vue 3",
    "tailwindcss",
    "components",
    "ui framework",
    "component framework",
    "ui library",
    "component library",
    "indielayer"
  ],
  "files": [
    "lib",
    "src",
    "volar.d.ts",
    "nuxt.js",
    "nuxt.plugin.js",
    "tailwind.preset.js",
    "README.md"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.es.js",
      "require": "./lib/index.cjs.js",
      "types": "./lib/index.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "pnpm generate && vite build --watch",
    "build": "pnpm generate && vite build",
    "build:prod": "pnpm build && pnpm gen-types",
    "build:only": "vite build",
    "generate": "pnpm gen-version",
    "gen-types": "vue-tsc --declaration --emitDeclarationOnly -p tsconfig.vitest.json --composite false",
    "gen-version": "node .scripts/gen-version.js",
    "test": "pnpm test:unit",
    "test:unit": "vitest --environment jsdom",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress open'",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:5050/ 'cypress run'",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "stylelint": "stylelint \"**/*.{css,vue,postcss,scss,sass}\" --ignore-path .gitignore"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^5.0.5",
    "@cypress/vue": "^5.0.5",
    "@indielayer/stylelint-config": "^1.0.0",
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^2.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.18",
    "@types/ramda": "^0.29.2",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.4.0",
    "@vueuse/core": "^10.2.0",
    "autoprefixer": "^10.4.0",
    "c8": "^7.12.0",
    "clean-css": "^5.3.0",
    "cypress": "^12.16.0",
    "eslint": "^8.43.0",
    "eslint-plugin-cypress": "^2.13.3",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.4",
    "ramda": "^0.29.0",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.16.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.2.2",
    "vite": "^4.3.9",
    "vitest": "^0.32.2",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "bugs": {
    "url": "https://github.com/indielayer/ui/issues"
  },
  "homepage": "https://github.com/indielayer/ui#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indielayer/ui.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
