{
  "name": "@indielayer/ui",
  "version": "1.6.2",
  "description": "Indielayer UI Components with Tailwind CSS build for Vue 3",
  "author": {
    "name": "JoÃ£o Teixeira",
    "url": "https://indielayer.com/"
  },
  "keywords": [
    "vue",
    "vue 3",
    "tailwindcss",
    "components",
    "ui framework",
    "component framework",
    "ui library",
    "component library",
    "indielayer"
  ],
  "files": [
    "lib",
    "src",
    "docs",
    "*.d.ts",
    "exports",
    "README.md"
  ],
  "type": "module",
  "main": "lib/index.umd.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.umd.js",
      "types": "./lib/index.d.ts"
    },
    "./docs/*": "./docs/*",
    "./nuxt": "./exports/nuxt.mjs",
    "./nuxt.plugin": "./exports/nuxt.plugin.js",
    "./nuxt.plugin.js": "./exports/nuxt.plugin.js",
    "./tailwind.preset": "./exports/tailwind.preset.js",
    "./tailwind.preset.js": "./exports/tailwind.preset.js"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite dev --mode docs",
    "build": "pnpm generate && vite build",
    "build:docs": "pnpm build --mode docs",
    "build:prod": "pnpm build && pnpm gen:types",
    "build:watch": "pnpm generate && vite build --watch",
    "build:only": "vite build",
    "build:stats": "VITE_VISUALIZER=Y npm run build",
    "generate": "pnpm gen:version",
    "gen:types": "vue-tsc --declaration --emitDeclarationOnly -p tsconfig.vitest.json --composite false",
    "gen:version": "node .scripts/gen-version.cjs",
    "gen:search": "node .scripts/gen-search.cjs",
    "test": "pnpm test:unit",
    "test:unit": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "stylelint": "stylelint \"**/*.{css,vue,postcss,scss,sass}\" --ignore-path .gitignore"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@indielayer/stylelint-config": "^1.0.0",
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^2.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.18",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.4.0",
    "@vuepic/vue-datepicker": "^8.0.0",
    "@vueuse/core": "^10.2.0",
    "autoprefixer": "^10.4.0",
    "c8": "^7.12.0",
    "clean-css": "^5.3.0",
    "eslint": "^8.43.0",
    "floating-vue": "^5.2.2",
    "fuse.js": "^7.0.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.4",
    "rollup-plugin-visualizer": "^5.9.2",
    "shiki": "1.0.0-beta.1",
    "stylelint": "^14.16.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.32.2",
    "vue": "^3.3.9",
    "vue-router": "^4.2.2",
    "vue-tsc": "^1.8.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "bugs": {
    "url": "https://github.com/indielayer/ui/issues"
  },
  "homepage": "https://github.com/indielayer/ui#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indielayer/ui.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
